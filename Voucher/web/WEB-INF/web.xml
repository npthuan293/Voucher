<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>voucherShop.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>checkReg</servlet-name>
        <servlet-class>voucherShop.checkReg</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerOrder</servlet-name>
        <servlet-class>voucherShop.ControllerOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getHint</servlet-name>
        <servlet-class>voucherShop.getHint</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerVoucher</servlet-name>
        <servlet-class>voucherShop.ControllerVoucher</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkReg</servlet-name>
        <url-pattern>/checkReg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerOrder</servlet-name>
        <url-pattern>/ControllerOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getHint</servlet-name>
        <url-pattern>/getHint</url-pattern>
    </servlet-mapping>
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>
            E:\Slide\Voucher\Voucher\web\Resources\
         </param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>ControllerVoucher</servlet-name>
        <url-pattern>/ControllerVoucher</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
